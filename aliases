#Project aliases
alias pmp="python3 ~/projects/mpdClient/src/mp.py"

#MPC macros
#plays an album
al(){
    mpc clear > /dev/null
    mpc search album $1 | mpc add
    mpc play
}
#plays a playlist
pl(){
    mpc clear > /dev/null
    cat ~/playlists/$1 | mpc add
    mpc play
}
#adds songs to playlist
addToPlaylist(){
    if [ ! -f ~/playlists/$1 ]; then
        touch ~/playlists/$1
    fi
    mpc search title "$2" >> ~/playlists/$1
}

#view man page in vim
ma(){
    man $1 > /tmp/man
    vim /tmp/man
}

#alias for learn
te(){
    learn > /tmp/learnOut
    vim /tmp/learnOut
}

#upload file to oxo
oxo(){
    curl -F"file=@$1" http://0x0.st
}
#screenshot and upload
upScr(){
    scrot -o /tmp/scrot
    oxo /tmp/scrot
}


alias lab="cd ~/labs/object_oriented"
